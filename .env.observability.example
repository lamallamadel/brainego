# Observability Stack Environment Variables

# Slack Webhooks for AlertManager
# Get webhook URL from: https://api.slack.com/apps
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Channels (create these in your workspace)
# - #ai-platform-alerts (default alerts)
# - #ai-platform-critical (critical alerts with @channel)
# - #ai-platform-gpu (GPU alerts)
# - #ai-platform-drift (drift detection alerts)
# - #ai-platform-budget (budget alerts)
# - #ai-platform-infra (infrastructure alerts)

# OpenTelemetry Configuration
ENABLE_TELEMETRY=true
OTLP_ENDPOINT=http://otel-collector:4317
JAEGER_ENDPOINT=jaeger:6831

# Prometheus Configuration
PROMETHEUS_RETENTION=90d
PROMETHEUS_SCRAPE_INTERVAL=15s

# Loki Configuration
LOKI_RETENTION=2160h  # 90 days

# AlertManager Configuration
ALERTMANAGER_WEB_EXTERNAL_URL=http://localhost:9093

# Metrics Export
ENABLE_METRICS=true

# Log Level
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
